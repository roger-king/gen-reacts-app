{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["src/app/*"],
            "Components": ["src/app/components"],
            "Hocs": ["src/app/hocs"],
            "Pages": ["src/app/pages"]
        },
        "outDir": "./dist/",
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "inlineSourceMap": false,
        "inlineSources": false,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "declaration": false,
        "jsx": "react"
    },
    "awesomeTypescriptLoaderOptions": {
        "useCache": true
    },
    "exclude": ["node_modules", "build", "typings/main", "typings/main.d.ts", "src/app/*/__tests__"]
}
