{
    "name": "reactjs-modern-seed",
    "version": "1.0.0",
    "description": "reactjs-modern-seed",
    "main": "index.js",
    "scripts": {
        "start": "cross-env NODE_ENV=development webpack-dev-server --host 0.0.0.0 --port 8001 --history-api-fallback",
        "start:dev": "webpack-dev-server --open --config ./build/webpack.dev.conf.js --port 8000",
        "start:test": "npm-run-all --parallel lint:watch test",
        "test": "karma start --single-run",
        "test:watch": "karma start",
        "gen": "plop",
        "gen:init": "plop init",
        "gen:component": "plop component",
        "gen:container": "plop container",
        "gen:service": "plop service",
        "build": "node build"
    },
    "keywords": [
        "reactjs",
        "mobx"
    ],
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "/src/.*\\.tests.(ts|js)$"
    },
    "author": "rking",
    "license": "ISC",
    "dependencies": {
        "history": "^4.7.2",
        "mobx": "^3.3.1",
        "mobx-react": "^4.3.4",
        "mobx-react-router": "^4.0.1",
        "react": "^16.0.0",
        "react-dom": "^16.0.0",
        "react-router": "^4.2.0",
        "react-router-dom": "^4.2.2"
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/history": "^4.6.1",
        "@types/jest": "^21.1.5",
        "@types/react": "^16.0.21",
        "@types/react-dom": "^16.0.2",
        "@types/react-router": "^4.0.16",
        "@types/react-router-dom": "^4.2.0",
        "awesome-typescript-loader": "^3.3.0",
        "chalk": "^2.3.0",
        "copy-webpack-plugin": "^4.2.0",
        "css-loader": "^0.28.7",
        "extract-text-webpack-plugin": "^3.0.2",
        "friendly-errors-webpack-plugin": "^1.6.1",
        "html-webpack-plugin": "^2.30.1",
        "html-webpack-template": "^6.0.2",
        "jest": "^21.2.1",
        "optimize-css-assets-webpack-plugin": "^3.2.0",
        "ora": "^1.3.0",
        "plop": "^1.9.0",
        "postcss-import": "^11.0.0",
        "postcss-loader": "^2.0.8",
        "rimraf": "^2.6.2",
        "source-map-loader": "^0.2.3",
        "style-loader": "^0.19.0",
        "supports-color": "^5.0.0",
        "ts-jest": "^21.2.1",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "url-loader": "^0.6.2",
        "webpack": "^3.8.1",
        "webpack-dev-server": "^2.9.4",
        "webpack-merge": "^4.1.1"
    }
}
