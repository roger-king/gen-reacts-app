{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/app/*"
            ]
        },
        "outDir": "./dist/",
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "inlineSourceMap": false,
        "inlineSources": false,
        "experimentalDecorators": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        "build",
        "typings/main",
        "typings/main.d.ts"
    ]
}